{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx", // Enable JSX with React 17+ transform
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node", // Ensure Node-style resolution
    "lib": ["ES2015", "DOM"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}